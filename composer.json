{
  "name": "maatify/infra-drivers",
  "description": "Pure infrastructure driver builders constructed from explicit, typed, readonly configuration objects. No environment access. No adapters. No runtime magic.",
  "type": "library",
  "license": "MIT",

  "keywords": [
    "maatify",
    "infrastructure",
    "drivers",
    "pdo",
    "redis",
    "mongodb",
    "database",
    "connection",
    "driver-builder",
    "configuration",
    "dto",
    "readonly",
    "php",
    "clean-architecture",
    "no-env",
    "no-di",
    "no-magic"
  ],

  "require": {
    "php": ">=8.2"
  },

  "suggest": {
    "ext-pdo": "Required to use MySQLDriverBuilder",
    "doctrine/dbal": "Required to use MySQLDBALDriverBuilder",
    "ext-redis": "Required to use RedisDriverBuilder (ext-redis)",
    "predis/predis": "Required to use PredisDriverBuilder",
    "mongodb/mongodb": "Required to use MongoDriverBuilder"
  },

  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.89",
    "phpstan/phpstan": "^2.0",
    "phpunit/phpunit": "^11.0",
    "maatify/bootstrap": "^1.0",
    "mongodb/mongodb": "^2.0",
    "predis/predis": "^2.3",
    "doctrine/dbal": "^4.3"
  },

  "autoload": {
    "psr-4": {
      "Maatify\\InfraDrivers\\": "src/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Maatify\\InfraDrivers\\Tests\\": "tests/"
    }
  },

  "scripts": {
    "test": "phpunit --configuration phpunit.no-coverage.xml.dist",
    "test:coverage": "XDEBUG_MODE=coverage phpunit --configuration phpunit.xml.dist",
    "analyse": "phpstan analyse src --level=max",
    "format": "php-cs-fixer fix",
    "ci": [
      "@analyse",
      "@test"
    ]
  },

  "authors": [
    {
      "name": "Mohamed Abdulalim",
      "email": "mohamed@maatify.dev",
      "homepage": "https://www.maatify.dev",
      "role": "Lead Architect"
    }
  ],

  "minimum-stability": "stable",
  "prefer-stable": true,

  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "allow-plugins": {
      "phpstan/extension-installer": false
    }
  }
}

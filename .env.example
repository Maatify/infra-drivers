# ============================================================
# Test Environment Configuration
# ============================================================
# This file is used ONLY for test execution.
# Copy it to .env.testing
# Loaded via tests/bootstrap.php ONLY
# ============================================================

# ------------------------------------------------------------
# Application Environment
# ------------------------------------------------------------
APP_ENV=testing

# ------------------------------------------------------------
# MySQL (DTO / Builder tests)
# ------------------------------------------------------------
TEST_MYSQL_DSN="mysql:host=localhost;dbname=test"
TEST_MYSQL_USER="root"
TEST_MYSQL_PASS=""

# ------------------------------------------------------------
# Redis (DTO / Builder tests)
# ------------------------------------------------------------
TEST_REDIS_HOST=127.0.0.1
TEST_REDIS_PORT=6379
TEST_REDIS_PASSWORD=""
TEST_REDIS_DATABASE=0
TEST_REDIS_TIMEOUT=0

# ------------------------------------------------------------
# MongoDB (DTO / Builder tests)
# ------------------------------------------------------------
# Option A — Authentication via URI (recommended)
#TEST_MONGO_URI="mongodb://user:password@localhost:27017/?authSource=admin"

# Option B — No authentication (local dev)
TEST_MONGO_URI="mongodb://localhost:27017"

# Optional explicit credentials (future-proof, not mandatory)
TEST_MONGO_USER="admin"

# Database name (REQUIRED for usage)
TEST_MONGO_DATABASE="test"
TEST_MONGO_PASS="password"

TEST_MONGO_AUTH_SOURCE="admin"
